<header id="header" class="header" role="banner" aria-label="{{ 'Site header'|t}}">
    <div class="container-fluid">
        <div class="row">
            <div class="col col-sm-12 cit-primary">
                {{ page.header }}
            </div>
            <div class="col-5 column-center hide-xs-md">
                <div class="phonenumber">USA :<a href="tel:+1-844-567-5232">
                        1-844-567-5232</a>
                    | UK :
                    <a href="tel:+44-800-031-5040">44-800-031-5040</a>
                    | AUS :
                    <a href="tel:+61-180-074-6461">+61-180-074-6461</a>
                </div>
            </div>
            <div class="col justify-content-end d-flex column-center hide-xs-md">
                <div class="partners-logo"></div>
            </div>
        </div>
    </div>
    {% block head %}
        {% if page.secondary_menu or page.top_header or page.top_header_form %}
            <nav{{navbar_top_attributes}}>
                {% if container_navbar %}
                    <div class="container">
                    {% endif %}
                    {{ page.top_header }}
                    {% if page.top_header_form %}
                        <div class="form-inline navbar-form float-right">
                            {{ page.top_header_form }}
                        </div>
                    {% endif %}
                    {% if container_navbar %}
                    </div>
                {% endif %}
            </nav>
        {% endif %}
        <nav{{navbar_attributes}}>
            {% if container_navbar %}
                <div class="container">
                {% endif %}
                {% if page.primary_menu or page.header_form %}
                    <button aria-controls="CollapsingNavbar" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler navbar-toggler-right" data-target="#CollapsingNavbar" data-toggle="collapse" type="button">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse row justify-content-center mainnavigation-topborder shadow" id="CollapsingNavbar">
                        {{ page.primary_menu }}
                        {% if page.header_form %}
                            <div class="form-inline navbar-form float-right">
                                {{ page.header_form }}
                            </div>
                        {% endif %}
                    </div>
                {% endif %}
                {% if sidebar_collapse %}
                    <button aria-controls="CollapsingLeft" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler navbar-toggler-left" data-target="#CollapsingLeft" data-toggle="collapse" type="button"></button>
                {% endif %}
                {% if container_navbar %}
                </div>
            {% endif %}
        </nav>
    {% endblock %}
</header>
